APP_NAME=BeatWager
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_PORT=8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# PostgreSQL 17 Database
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_EXTERNAL_PORT=5433
DB_DATABASE=beatwager
DB_USERNAME=beatwager_user
DB_PASSWORD=secure_password_change_in_production

# Redis 8 Configuration
# Note: REDIS_PORT is the internal Docker port (6379), not the external mapped port
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache & Sessions
CACHE_STORE=redis
CACHE_PREFIX=beatwager_cache

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue
QUEUE_CONNECTION=redis

# Filesystem
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Mail
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@beatwager.app"
MAIL_FROM_NAME="${APP_NAME}"

# Telegram Bot API
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=YourBotUsername
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here
TELEGRAM_API_URL=https://api.telegram.org

# ngrok (for local development & Telegram webhook testing)
# Get your authtoken from: https://dashboard.ngrok.com/get-started/your-authtoken
# Get a static domain from: https://dashboard.ngrok.com/cloud-edge/domains
NGROK_AUTHTOKEN=your_ngrok_authtoken_here
NGROK_DOMAIN=your-static-domain.ngrok-free.app

# AWS (if needed in future)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite
VITE_APP_NAME="${APP_NAME}"

# Features
FEATURE_ACTIVITY_TRACKING=true

# LLM Provider API Keys (System-level)
# Used for free operations like listing available models
# Groups use their own API keys for actual message generation
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
REQUESTY_API_KEY=